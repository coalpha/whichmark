{
   "manifest_version": 2,
   "name": "Whichmark",
   "version": "0.1.1",
   "description": "Switchmark compatable bookmark switcher for Firefox",

   "permissions": [
      "bookmarks",
      "storage",
      "contextMenus"
   ],

   "icons": {
      "128": "icon.png"
   },

   "background": {
      "scripts": ["bin/whichmark.js"]
   },

   "options_ui": {
      "page": "options/index.html",
      "browser_style": false,
      "open_in_tab": true
   },

   "browser_action": {
      "default_icon": {
         "128": "icon.png"
      },
      "default_title": "Whichmark"
   },

   "commands": {
      "_execute_browser_action": {
         "suggested_key": {
           "default": "Ctrl+Shift+S"
         }
      }
   },

   "applications": {"gecko":{"id":"whichmark@coalpha.github.io"}}
}
