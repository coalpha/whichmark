{
   "manifest_version": 2,
   "name": "Whichmark",
   "version": "0.1.0",

   "description": "Switchmark compatable bookmark switcher",

   "permissions": [
      "bookmarks",
      "storage",
      "contextMenus"
   ],

   "icons": {
      "128": "icon.png"
   },

   "background": { "scripts": ["bin/whichmark.js"] },
   "options_ui": {
      "page": "options/index.html",
      "browser_style": false,
      "open_in_tab": true
   },

   "browser_action": {
      "default_icon": {
         "128": "icon.png"
      },
      "default_title": "Whichmark"
   },

   "applications": { "gecko": { "id": "whichmark@coalpha.github.io" } }
}
